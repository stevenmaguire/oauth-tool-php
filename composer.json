{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
        "league/oauth2-linkedin": "^0.4.0",
        "league/oauth2-github": "^0.2.0",
        "league/oauth2-instagram": "^0.2.1",
        "stevenmaguire/oauth2-microsoft": "^0.2.1",
        "stevenmaguire/oauth2-uber": "^0.2.0",
        "stevenmaguire/oauth2-eventbrite": "^0.2.0",
        "stevenmaguire/oauth2-box": "^0.1.0",
        "stevenmaguire/oauth2-bitbucket": "^0.1.1",
        "stevenmaguire/oauth2-elance": "^0.1.0",
        "stevenmaguire/oauth2-paypal": "^0.1.0",
        "stevenmaguire/oauth2-keycloak": "^0.1.0",
        "stevenmaguire/oauth2-foursquare": "^0.1.0",
        "stevenmaguire/oauth2-salesforce": "^0.1.0",
        "stevenmaguire/oauth2-zendesk": "^0.1.0",
        "league/oauth2-facebook": "^1.1",
        "league/oauth1-client": "^1.6"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
